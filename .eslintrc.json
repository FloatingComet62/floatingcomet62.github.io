{
  "extends": "next",
  "rules": {
    "no-console": "warn",
    "no-eval": "error",
    "yoda": "error",
    "no-undef-init": "error",
    "prefer-const": "error",
    "brace-style": "error",
    "no-unused-vars": "error",
    "no-unused-expressions": "error",
    "no-unused-labels": "error",
    "no-useless-return": "error",
    "no-var": "error",
    "no-shadow": "error",
    "no-shadow-restricted-names": "error",
    "arrow-spacing": "error",
    "no-duplicate-imports": "error",
    "comma-spacing": "error",
    "comma-style": "error",
    "jsx-quotes": "error",
    "key-spacing": "error",
    "keyword-spacing": "error"
  }
}
